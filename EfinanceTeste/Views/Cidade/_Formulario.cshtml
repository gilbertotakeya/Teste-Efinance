@model Classes.Cad_End_Cidade
<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="DataInclusao" />
<input type="hidden" asp-for="DataExclusao" />


<div class="panel panel-primary" data-collapsed="0">
    <div class="panel-body">
        <div class="content">
            <div class="row">
                <div class="col-md-5">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="EstadoId" class="control-label"></label>
                    <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>

                    <span asp-validation-for="EstadoId" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="CodigoIBGE" class="control-label"></label>
                    <input asp-for="CodigoIBGE" class="form-control CPF" />
                    <span asp-validation-for="CodigoIBGE" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<br />